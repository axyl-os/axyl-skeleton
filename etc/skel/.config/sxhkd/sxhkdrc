#
# wm independent hotkeys
#

# reloads sxhkd configuration:
super + Escape
        pkill -USR1 -x sxhkd

# Launch Terminal
super + Return
        term

# Launch Applications
super + shift + {f,w,r,g,c,d,s}
    {thunar,firefox,rangerfm,geany,code,discord,spotify}

# Volume controls
XF86Audio{RaiseVolume,LowerVolume,Mute}
    volume{ --inc, --dec, --toggle}

# Brightness controls
XF86MonBrightness{Up,Down}
    brightness{ --inc, --dec}

# screenshot
Print
    takeshot --now

# screenshot in 5 seconds
alt + Print
    takeshot --in5

# screenshot in 10 seconds
shift + Print
    takeshot --in10

# screenshot active window
ctrl + Print
    takeshot --win

# screenshot selected area
ctrl + alt + Print
    takeshot --area
