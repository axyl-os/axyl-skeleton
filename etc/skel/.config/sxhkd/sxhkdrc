#
# wm independent hotkeys
#

# reloads sxhkd configuration:
super + Escape
    pkill -USR1 -x sxhkd

# j4 dmenu
alt + F1
    j4-dmenu

# Launch Menus
super + {x,n,d}
    {powermenu,def-nmdmenu,def-dmenu}

# Lock Screen
ctrl + alt + l
    lock

# custom dmenu scripts
alt + {e,l}
    {edit-configs, quick-links}

# Launch Applications
super + shift + {f,w,r,g,c,d,s}
    {thunar,firefox,rangerfm,geany,code,discord,spotify}

# Volume controls
XF86Audio{RaiseVolume,LowerVolume,Mute}
    volume{ --inc, --dec, --toggle}

# Brightness controls
XF86MonBrightness{Up,Down}
    brightness{ --inc, --dec}

# screenshot
Print
    takeshot --now

# screenshot in 5 seconds
alt + Print
    takeshot --in5

# screenshot in 10 seconds
shift + Print
    takeshot --in10

# screenshot active window
ctrl + Print
    takeshot --win

# screenshot selected area
ctrl + alt + Print
    takeshot --area
